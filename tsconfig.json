{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "sourceMap": true, 
    "outDir": "dist", 
    "rootDir": "src",
    "strict": true,                           
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "Node"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
